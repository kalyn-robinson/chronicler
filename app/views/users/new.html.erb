<% provide(:title, 'Sign Up') %>
<h1>Sign Up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= form_for(@user) do |f| %>
          <%= render 'shared/error_messages' %>

          <div class="form-group has-feedback">
            <%= f.label :name, class: 'sr-only' %>
            <%= f.text_field :name, class: 'form-control', placeholder: 'Username' %>
            <span class="fa fa-user-o form-control-feedback" aria-hidden="true"></span>
          </div>

          <div class="form-group has-feedback">
            <%= f.label :email, class: 'sr-only' %>
            <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
            <span class="fa fa-envelope-o form-control-feedback" aria-hidden="true"></span>
          </div>

          <div class="form-group has-feedback">
            <%= f.label :password, class: 'sr-only' %>
            <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
            <span class="fa fa-lock form-control-feedback" aria-hidden="true"></span>
          </div>

          <div class="form-group has-feedback">
            <%= f.label :password_confirmation, class: 'sr-only' %>
            <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm Password' %>
            <span class="fa fa-key form-control-feedback" aria-hidden="true"></span>
          </div>

          <%= f.submit "Create My Account", class: "btn btn-primary btn-block" %>
        <% end %>
      </div>
    </div>
  </div>
</div>