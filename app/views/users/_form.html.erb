<%= form_for(@user, url: url) do |f| %>
  <%= render 'shared/error_messages', model: f.object %>

  <div class="form-group has-feedback">
    <%= f.label :name, class: 'sr-only' %>
    <%= f.text_field :name, class: 'form-control', placeholder: 'Username' %>
    <span class="fa fa-user-o form-control-feedback" aria-hidden="true"></span>
  </div>

  <div class="form-group has-feedback">
    <%= f.label :email, class: 'sr-only' %>
    <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
    <span class="fa fa-envelope-o form-control-feedback" aria-hidden="true"></span>
  </div>

  <div class="form-group has-feedback">
    <%= f.label :password, class: 'sr-only' %>
    <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
    <span class="fa fa-lock form-control-feedback" aria-hidden="true"></span>
  </div>

  <div class="form-group has-feedback">
    <%= f.label :password_confirmation, class: 'sr-only' %>
    <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm Password' %>
    <span class="fa fa-key form-control-feedback" aria-hidden="true"></span>
  </div>

  <%= f.submit text, class: "btn btn-primary btn-block" %>
<% end %>