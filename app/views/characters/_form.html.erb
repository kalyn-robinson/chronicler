<%= form_for @character, url: new_character_path do |form| %>
  <%= render 'shared/error_messages', model: @character %>

  <div class="form-group has-feedback">
    <%= form.label :name, class: 'sr-only' %>
    <%= form.text_field :name, class: 'form-control', placeholder: 'Name' %>
    <span class="fa fa-user-o form-control-feedback" aria-hidden="true"></span>
  </div>

  <div class="form-group has-feedback">
    <%= form.fields_for :character_sheet, CharacterSheet.new do |sheet_form| %>
      <%= sheet_form.label :sheet_id, "Sheet", class: "sr-only" %>
      <%= sheet_form.select :sheet_id, Sheet.all.map { |sheet| [sheet.name, sheet.id] },
                            prompt: 'Sheet' %>
      <span class="fa fa-file-text-o form-control-feedback" aria-hidden="true"></span>
    <% end %>
  </div>

  <%= form.submit 'Create Character', class: "btn btn-primary btn-block" %>
<% end %>