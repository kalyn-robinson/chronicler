<% provide(:title, "Log In") %>
<h1>Log In</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= form_for(:session, url: login_path) do |f| %>
          <div class="form-group has-feedback">
            <%= f.label :name, class: 'sr-only' %>
            <%= f.text_field :name, class: 'form-control', placeholder: 'Username' %>
            <span class="fa fa-user-o form-control-feedback" aria-hidden="true"></span>
          </div>

          <div class="form-group has-feedback">
            <%= f.label :password, class: 'sr-only' %>
            <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
            <span class="fa fa-lock form-control-feedback" aria-hidden="true"></span>
          </div>

          <div class="checkbox">
            <%= f.label :remember_me do %>
              <%= f.check_box :remember_me %>
              Remember me on this computer
            <% end %>
          </div>

          <%= f.submit "Log In", class: "btn btn-primary btn-block" %>
        <% end %>
      </div>

      <div class="panel-footer">
        <%= link_to "New user?", signup_path %> 
        <%= link_to "Forgot password?", new_password_reset_path, class: "pull-right" %>
      </div>
    </div>
  </div>
</div>